{
  "name": "aws-sls-spa-sample-api",
  "version": "0.0.0",
  "description": "Sample of serverless api",
  "main": "src/controllers/*.ts",
  "scripts": {
    "docker-compose": "docker-compose -f dockers/docker-compose.yml",
    "docker-exec-sls": "npm run docker-compose -- exec serverless",
    "docker-build": "npm run docker-compose -- build",
    "docker-up": "npm run docker-compose -- up -d && npm run docker-exec-sls -- npm install --production",
    "docker-up-dev": "npm run docker-compose -- up -d && npm run docker-exec-sls -- npm install",
    "docker-down": "npm run docker-compose -- down",
    "lint": "npm run docker-exec-sls -- node_modules/tslint/bin/tslint -c ./tslint.json --project . **/*.ts",
    "lint-fix": "npm run docker-exec-sls -- node_modules/tslint/bin/tslint -c ./tslint.json --project . --fix **/*.ts",
    "webpack": "npm run docker-exec-sls -- serverless webpack",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-all": "npm run docker-down && npm run docker-up-dev && npm run lint && npm run webpack && npm run docker-down",
    "offline": "npm run docker-exec-sls -- sls offline --host 0.0.0.0"
  },
  "dependencies": {
    "source-map-support": "^0.5.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.1",
    "@types/node": "^8.0.57",
    "prettier": "^1.14.2",
    "serverless-offline": "^3.25.8",
    "serverless-webpack": "^5.1.1",
    "ts-loader": "^4.2.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0"
  },
  "author": "Makoto Nihei <nihemak@gmail.com> (https://github.com/nihemak)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nihemak/aws-sls-spa-sample-api.git"
  }
}
