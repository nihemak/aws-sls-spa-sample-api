{
  "name": "aws-sls-spa-sample-api",
  "version": "0.0.0",
  "description": "Sample of serverless api",
  "main": "src/controllers/*.ts",
  "scripts": {
    "docker-compose": "docker-compose -f dockers/docker-compose.yml",
    "docker-exec-sls": "npm run docker-compose -- exec serverless",
    "docker-build": "npm run docker-compose -- build",
    "docker-up": "npm run docker-compose -- up -d && npm run docker-exec-sls -- npm install --production",
    "docker-up-dev": "npm run docker-compose -- up -d && npm run docker-exec-sls -- npm install",
    "docker-down": "npm run docker-compose -- down",
    "docker-test-all": "npm run docker-down && npm run docker-up-dev && npm run docker-exec-sls -- npm run test-all && npm run docker-down",
    "docker-offline": "npm run docker-exec-sls -- sls offline --host 0.0.0.0",
    "docker-create-tables": "npm run docker-exec-sls -- ./node_modules/.bin/ts-node src/commands/CreateLocalTables.ts",
    "lint": "node_modules/tslint/bin/tslint -c ./tslint.json --project . **/*.ts",
    "lint-fix": "node_modules/tslint/bin/tslint -c ./tslint.json --project . --fix **/*.ts",
    "webpack": "serverless webpack",
    "test": "./node_modules/.bin/mocha -r ts-node/register src/test/**/*.spec.ts",
    "test-all": "npm-run-all lint webpack test"
  },
  "dependencies": {
    "dynamodb": "^1.1.2",
    "joi": "^13.6.0",
    "source-map-support": "^0.5.0",
    "validatorjs": "^3.14.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.1",
    "@types/chai": "^4.1.4",
    "@types/joi": "^13.4.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.0.57",
    "@types/validatorjs": "^3.7.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "serverless-offline": "^3.25.8",
    "serverless-webpack": "^5.1.1",
    "ts-loader": "^4.2.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0"
  },
  "author": "Makoto Nihei <nihemak@gmail.com> (https://github.com/nihemak)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nihemak/aws-sls-spa-sample-api.git"
  }
}
