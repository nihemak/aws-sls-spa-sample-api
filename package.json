{
  "name": "aws-sls-spa-sample-api",
  "version": "0.0.3",
  "description": "Sample of serverless api",
  "main": "app/http/controllers/*.ts",
  "scripts": {
    "docker-compose": "docker-compose -f dockers/docker-compose.yml",
    "docker-exec-sls": "npm run docker-compose -- exec serverless",
    "docker-build": "npm run docker-compose -- build",
    "docker-up": "npm run docker-compose -- up -d && npm run docker-exec-sls -- npm install --production",
    "docker-up-dev": "npm run docker-compose -- up -d && npm run docker-exec-sls -- npm install",
    "docker-down": "npm run docker-compose -- down",
    "docker-test-all": "npm run docker-down && npm run docker-up-dev && npm run docker-exec-sls -- npm run test-all && npm run docker-down",
    "docker-offline": "npm run docker-exec-sls -- sls offline --host 0.0.0.0",
    "docker-reset-tables": "npm run docker-exec-sls -- ./node_modules/.bin/ts-node -r tsconfig-paths/register app/commands/ResetAllTables.ts",
    "lint": "node_modules/tslint/bin/tslint -c ./tslint.json --project . **/*.ts",
    "lint-fix": "node_modules/tslint/bin/tslint -c ./tslint.json --project . --fix **/*.ts",
    "webpack": "serverless webpack",
    "test": "./node_modules/.bin/mocha -r ts-node/register -r tsconfig-paths/register test/units/**/*.spec.ts test/units/**/**/*.spec.ts",
    "test-all": "npm-run-all lint webpack test"
  },
  "dependencies": {
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@middy/core": "^1.0.0-alpha.22",
    "@middy/http-cors": "^1.0.0-alpha.22",
    "@middy/http-event-normalizer": "^1.0.0-alpha.22",
    "@middy/http-json-body-parser": "^1.0.0-alpha.22",
    "aws-sdk": "^2.400.0",
    "inversify": "^4.14.0",
    "jsonwebtoken": "^8.4.0",
    "jwk-to-pem": "^2.0.1",
    "lodash": "^4.17.11",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "source-map-support": "^0.5.10",
    "validatorjs": "^3.15.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.13",
    "@types/chai": "^4.1.7",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.24",
    "@types/request": "^2.48.1",
    "@types/validatorjs": "^3.15.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "serverless-offline": "^3.33.0",
    "serverless-webpack": "^5.2.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.8.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3",
    "webpack": "^4.29.3"
  },
  "author": "Makoto Nihei <nihemak@gmail.com> (https://github.com/nihemak)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nihemak/aws-sls-spa-sample-api.git"
  }
}
