{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "esnext",
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "*" : ["app/@types/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
